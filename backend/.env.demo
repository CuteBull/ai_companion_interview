# Local demo environment (isolated from automated tests)
DATABASE_URL=sqlite:///./demo.db

# Azure OpenAI placeholders (unused when MOCK_OPENAI=true)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_TRANSCRIBE_API_VERSION=2025-03-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_TRANSCRIBE_DEPLOYMENT=gpt-4o-transcribe

# Cloudinary placeholders
CLOUDINARY_CLOUD_NAME=mock_cloud
CLOUDINARY_API_KEY=mock_api_key
CLOUDINARY_API_SECRET=mock_api_secret
LOCAL_UPLOAD_DIR=./uploads

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Security
API_KEY=
RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=100/minute
REDIS_URL=redis://localhost:6379/0

# Enable mock mode so chat works without real Azure credentials
MOCK_OPENAI=true
